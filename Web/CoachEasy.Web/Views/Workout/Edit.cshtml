@model EditWorkoutViewModel
@using CoachEasy.Web.ViewModels.Workouts;
@using CoachEasy.Data.Models.Enums;
@{
    ViewData["Title"] = "Edit";
}
<div class="form container">
    <div class="d-flex justify-content-center">
        <div class="row">
            <div class="col-lg-12">
                <h2>Edit Workout</h2>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" id="editForm" class="text-center border border-light p-5" enctype="multipart/form-data">
                <div class="form-row mb-4">
                    <div class="col">
                        <label asp-for="Name" class="font-weight-bold"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="PositionName" class="font-weight-bold"></label>
                        <select asp-for="PositionName" class="form-control" asp-items="@Html.GetEnumSelectList<PositionName>()"></select>
                        <span asp-validation-for="PositionName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col my-3">
                    <label asp-for="VideoUrl" class="font-weight-bold"></label>
                    <input asp-for="VideoUrl" class="form-control" />
                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                </div>
                <div class="col my-3">
                    <label asp-for="Description" class="font-weight-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <hr />
            </form>
        </div>
    </div>
</div>
<div class="row justify-content-center">
<button class="btn btn-info btn-lg my-1 align-content-center" type="submit" data-toggle="modal" data-target="#modalEdit">Edit</button>
 </div>
<!-- Modal -->
<div class="modal" id="modalEdit" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you confirm this changes?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>