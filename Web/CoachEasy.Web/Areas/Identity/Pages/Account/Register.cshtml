@page
@model RegisterModel
@using CoachEasy.Data.Models.Enums;
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h4>Create a new account.</h4>
            <hr />
          
            <div class="form-group">
                <label asp-for="Input.SelectedRole">Choose register type</label>
                <select asp-for="Input.SelectedRole" class="form-control" id="typeUser" onchange="ChangeRegisterProperties()">
                    <option value="Coach">Coach</option>
                    <option value="Client">Client</option>
                </select>
                <span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group" id="Password">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
            <div class="form-group coach">
                <label asp-for="Input.Experience"></label>
                <input asp-for="Input.Experience" class="form-control" />
                <span asp-validation-for="Input.Experience" class="text-danger"></span>
            </div>
            <div class="form-group client" style="display:none">
                <label asp-for="Input.HasExperience"></label>
                <input asp-for="Input.HasExperience" class="form-control" />
                <span asp-validation-for="Input.HasExperience" class="text-danger"></span>
            </div>
            <div class="form-group coach">
                <label asp-for="Input.Description"></label>
                <textarea asp-for="Input.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-group client" style="display:none">
                <label asp-for="Input.PositionPlayed"></label>
                <select asp-for="Input.PositionPlayed" class="form-control" asp-items="@Html.GetEnumSelectList<PositionName>()"></select>
                <span asp-validation-for="Input.PositionPlayed" class="text-danger"></span>
            </div>
            <div class="form-group coach">
                <label asp-for="Input.UserImage"></label>
                <input asp-for="Input.UserImage" class="form-control" />
                <span asp-validation-for="Input.UserImage" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
